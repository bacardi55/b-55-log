{% extends 'vendor/carew/theme-bootstrap/layouts/index.html.twig'%}

{% block content_main %}
    {% if posts %}
        <h2>Blog post</h2>
        <ul>
            {% for post in posts %}
                <li><a href="{{ relativeRoot }}/{{ post.path }}">{{ post.metadatas.date|date('M d') }}: {{ post.title }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if tags %}
        <h2>Tags</h2>
        <ul>
            {% for tag in tags|keys %}
                <li><a href="{{ relativeRoot }}/tags/{{ tag }}.html">{{ tag|title }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

{% block content_title %}
<div class="page-header">
    <h1>
        {{ document.title|default(site.title|default('aaa')) }}
    </h1>
</div>
{% endblock %}

