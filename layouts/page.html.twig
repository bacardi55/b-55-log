{% extends "index.html.twig" %}

{% block content_container %}
  <div class="row">
    <div class="span8 content">
      {% block content_title %}
        {% if document.title is defined and document.title %}
          <div class="page-header">
            <h1>{{ document.title }}
              {%- if document.metadatas.subtitle is defined %} <small>{{ document.metadatas.subtitle }}</small>{% endif -%}
            </h1>
          </div>
        {% endif %}
      {% endblock %}

    {% block content_main %}
      {% block content_main_left document.body|default('')|raw %}

    </div>
      {% block content_main_right %}
        {{ parent() }}
      {% endblock %}
    {% endblock %}
  </div>
{% endblock %}

